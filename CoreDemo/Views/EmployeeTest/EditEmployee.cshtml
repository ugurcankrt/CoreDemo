@model CoreDemo.Controllers.Class1


@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Personel Güncelleme Sayfası(API ile)</h1>
<form method="post">
    <label>#</label>
    @Html.TextBoxFor(x=>x.ID, new{@class="form-control"})
    <br />
    <label>Personel</label>
    @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
    <br />
    <button class="btn btn-outline-info">Güncelle</button>
</form>
